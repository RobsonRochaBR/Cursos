@using Agenda.Dados
@model Professor
@{
    ViewBag.Title = "Editar professor";
}
@functions {
    public static bool IsBeforeToday(string value)
    {
        DateTime result;
        return DateTime.TryParse(value.ToString(), out result) && result < DateTime.Now;
    }

}
@using (Html.BeginForm())
{
    <fieldset>
        @Html.HiddenFor(m => m.Id)
        <div>
            <div>@Html.LabelFor(m => m.Nome):</div>
            <div>
                @Html.TextBoxFor(m => m.Nome)
                @Html.ValidationMessageFor(m => m.Nome)
            </div>
        </div>
        <div>
            <div>@Html.LabelFor(m => m.EMail):</div>
            <div>
                @Html.TextBoxFor(m => m.EMail)
                @Html.ValidationMessageFor(m => m.EMail)
            </div>
        </div>
        @IsBeforeToday("2010/3/22") @*returns True*@
        <button type="submit">Gravar</button>
    </fieldset>
    @Html.ActionLink("Voltar", "Index")
}
